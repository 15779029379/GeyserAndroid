<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_geyser">

        <ListPreference
            app:defaultValue="internal"
            app:entries="@array/storage_entries"
            app:entryValues="@array/storage_values"
            app:key="geyser_storage"
            app:title="@string/settings_storage"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="master"
            app:key="geyser_branch"
            app:title="@string/settings_branch"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="branch_refresh"
            app:title="@string/settings_branch_refresh" />

    </PreferenceCategory>

</PreferenceScreen>